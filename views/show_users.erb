<h1>Здравствуйте!</h1>
<p> Список записавшихся ниже:  </p>


<%= @results %>


<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Имя</th>
      <th scope="col">Телефон</th>
      <th scope="col">Дата</th>
      <th scope="col">Время</th>
      <th scope="col">Цвет</th>
      <th scope="col">Мастер</th>
    </tr>
  </thead>

  <tbody>
  <% @results.each do |row| %>

      <tr>

        <td><%= row['user_name'] %></td>
        <td><%= row['phone'] %></td>
        <td><%= row['date'] %></td>
        <td><%= row['time'] %></td>
        <td><%= row['colour'] %></td>
        <td><%= row['master'] %></td>

      </tr>
    <% end %>

</tbody>

</table>




